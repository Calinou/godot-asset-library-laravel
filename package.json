{
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm-run-all --sequential lint:css lint:js",
    "lint:css": "stylelint \"resources/css/**/*.css\"",
    "lint:js": "eslint \"resources/js/**/*.js\"",
    "prod": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "yarn run dev --watch",
    "watch-poll": "yarn run dev --watch --watch-poll"
  },
  "dependencies": {
    "@barba/core": "^2.6.0",
    "cross-env": "^5.1",
    "laravel-mix": "^4.0.7",
    "laravel-mix-purgecss": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "resolve-url-loader": "^2.3.1",
    "tailwindcss": "^1.1.2",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.39.3"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
